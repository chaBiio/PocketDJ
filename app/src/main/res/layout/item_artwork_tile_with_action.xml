<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/primary_light">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.mouse.lion.pocketdj.ui.widget.SquareImageView
            android:id="@+id/artwork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Footer : This layout based on this site -->
        <!-- https://material.io/guidelines/components/grid-lists.html#grid-lists-specs -->
        <RelativeLayout
            android:id="@+id/footer_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/artwork_tile_footer_height"
            android:background="@color/primary_dark_translucent"
            android:layout_alignBottom="@+id/artwork">
            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/artwork_tile_footer_height"-->
                <!--android:background="@color/primary_translucent"/>-->
            <TextView
                android:text="SENCE"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/roboto_mono_regular"
                android:textColor="@color/text_primary_light"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/action"
                android:layout_toStartOf="@+id/action"
                android:paddingTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>
            <TextView
                android:text="Mr.Children"
                android:id="@+id/extra_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/roboto_mono_regular"
                android:textColor="@color/text_secondary_light"
                android:layout_below="@+id/title"
                android:layout_toRightOf="@+id/icon"
                android:layout_toEndOf="@id/icon"
                android:layout_toLeftOf="@+id/action"
                android:layout_toStartOf="@+id/action"
                android:layout_marginTop="4dp"/>
            <ImageView
                android:src="@drawable/ic_album"
                android:id="@+id/icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:tint="@color/light_icon"
                android:layout_below="@+id/title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>
            <ImageView
                android:src="@drawable/ic_trending_down"
                android:id="@+id/action"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/light_icon"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>